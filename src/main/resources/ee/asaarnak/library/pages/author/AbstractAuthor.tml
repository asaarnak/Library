<html t:type="layout" title="${titleMessage}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <t:form t:id="author">
		<table>
	        <tr>
	            <th><t:label for="firstName" /></th>
	            <td><t:textfield t:id="firstName" t:value="author.firstName" /></td>
	        </tr>
	        <tr>
	            <th><t:label for="lastName" /></th>
	            <td><t:textfield t:id="lastName" t:value="author.lastName" /></td>
	        </tr>
	    </table>
		<t:submit t:id="submit" value="${submitButtonMessage}" class="btn success"/>
	</t:form>
</html>
